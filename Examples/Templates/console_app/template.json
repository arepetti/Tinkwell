{
  "id": "console_app",
  "name": "Basic Console Application",
  "description": "A simple .NET console project.",
  "type": "standard",
  "questions": [
    {
      "name": "ProjectName",
      "prompt": "What is the name of your new project?",
      "type": "text",
      "default": "MyConsoleApp"
    },
    {
      "name": "Framework",
      "prompt": "Which .NET framework do you want to target?",
      "type": "selection",
      "options": [ "net9.0", "net10.0" ]
    }
  ],
  "files": [
    { "original": "_ProjectName_.csproj", "target": "{{ProjectName}}.csproj", "mode": "copy" },
    { "original": "Program.cs", "target": "Program.cs", "mode": "copy" }
  ]
}
